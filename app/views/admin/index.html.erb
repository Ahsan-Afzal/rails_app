<head>
<style>
body{
    margin-left : 40%
}

</style>
</head>


<body>

<h1>All Products</h1>
<% @products.each do |p| %>
<div>Name:</br> <%=p.name %></div>
<div> Description:</br><%=p.description %></div>
<div>Price:</br><%=p.price %></div>
<div>Image:</br><%=image_tag(p.image) %></div>
<% if current_user && current_user.is_admin? %>
<%= link_to 'Edit', edit_product_path(p) %>


<%= link_to 'New', new_product_path %>
<%= link_to 'Delete', product_path(p),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<% end%>
<% end %>
</br>
------------------------
</br>
<% if current_user  %>
<%= link_to "Sign out ", destroy_user_session_path, method: :delete %>
<% else %>
<%= link_to "Sign in ", new_user_session_path %>
<% end%>

</body>