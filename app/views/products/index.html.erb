<head>
<style>
body{
    margin-left : 40%
}

</style>
</head>


<body>
<%= render 'layouts/header' %>
<h1>All Products</h1>

<% @products.each do |p| %>

    <div>Name:</br> <%=p.name %></div>
    <div> Description:</br><%=p.description %></div>
    <div>Price:</br><%=p.price %></div>
    <div>Image:</br><%=image_tag(p.image, style: 'width:150px height:150px') %></div>
    <%= link_to 'Show', product_path(p) %>
    </br>=====================</br>
     <div><%= link_to 'Add to cart', shopping_cart_path(product_id: p.id , product_name: p.name), :method => 'POST' %></div>

<% end %>


</body>
    