<h1>Products#edit</h1>
<h1>Products#new</h1>

<%= form_with(model: @product, local: true) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
   <p>
    <%= f.label :Description %><br>
     <%= f.text_area :description %>
  </p>
   <p>
    <%= f.label :category %><br>
    <%= f.number_field :category %>
  </p>
   <p>
    <%= f.label :SubCategory %><br>
     <%= f.number_field :sub_category %>
  </p>
 
  <p>
    <%= f.label :Price %><br>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= image_tag (@product.image) %><br>
    <%= f.label :Image %><br>
    <%= f.file_field :image %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
